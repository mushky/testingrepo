<div class="container">
	<%= form_for @document, html: {class: "form-horizontal"} do |f| %>
		<% if @document.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(@document.errors.count, "error") %> Prohibited this post from being saved:</h2>
					<ul>
					<% @document.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
					</ul>
				</div>
			<% end %>
			<div class="form-horizontal">
  		<p>
  			<%= f.label :description, "File Name" %><br>
  			<%= f.text_field :description, class: "form-control" %>
  		</p>

  		<p>
    		<%= f.file_field :file, class: "form-control" %>
    	</p>

  	</div>

		<form class="form-signin">
	  <h3>
  		<span class="glyphicon glyphicon-floppy-open" aria-hidden="true"></span>
	    <%= f.submit "Upload Document", class: "btn-sm btn-primary" %>
	  </h3>
	  <br>
	<% end %>
</div> <!-- /container -->
