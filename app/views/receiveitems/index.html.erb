<div class="container">
  <h1>Received Items</h1>
  <p>
    <button class="btn btn-default" type="button">    
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      <%= link_to "Add Receive Item", new_receiveitem_path %>
    </button>
  </p>
  <% @ReceiveItems.each do |receiveitem| %>
  <table class="table table-hover">
    <td>
      <h4><%= receiveitem.part%></h4>
      <%= receiveitem.serial %><br>
      <%= receiveitem.description %><br>
      <%= receiveitem.date %><br>
      Quantity: <%= receiveitem.quantity %><br>
      |<%= link_to 'View', receiveitem_path(receiveitem), class: "btn-sm btn-primary" %>|
      |<%= link_to 'Edit', edit_receiveitem_path(receiveitem), class: "btn-sm btn-warning"%>|
      |<%= link_to 'Delete', receiveitem_path(receiveitem), class: "btn-sm btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>|
    </td>
  <% end %>
  </table>
<%= will_paginate @ReceiveItems %>
