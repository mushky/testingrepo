<div class="container">
	<%= form_for @requisition, html: {class: "form-horizontal"} do |f| %>
		<div class="row">
			<div class="col-md-6">
				<p>
					<%= f.label :program, "Program:" %>
					<%= f.select(:program, options_for_select([['Corporate', 'Corporate'], ['MCTF', 'MCTF'],['TAF', 'TAF'], ['ESTS', 'ESTS'], ['UAEAF', 'UAEAF'], ['DAW', 'DAW'], ['IRAD', 'IRAD']]),{ class: "btn btn-default dropdown-toggle" }) %>
				</p>

				<p>
					<%= f.label :pr_number, "PR Number (obtain from Max)" %>
					<%= f.text_field :pr_number, class: "form-control" %>
				</p>	

				<p>
				  <%= f.label :requestor %>
				  <%= f.email_field :requestor, class: "form-control" %>
				</p>

				<p>
					<%= f.label :description %>
					<%= f.text_area :description, class: "form-control" %>
				</p>

				<p>
					<%= f.label :company, "Vendor" %>
					<%= f.text_field :company, class: "form-control" %>
				</p>

				<p>
					<%= f.label :part_number %>
					<%= f.text_field :part_number, class: "form-control" %>
				</p>

				<p>
					<%= f.label :quantity %>
					<%= f.number_field :quantity, class: "form-control" %>
				</p>
			</div><!-- /col-6-md -->
		</div><!-- /row -->

		<form class="form-signin">
	  <p>
	    <%= f.submit "Submit", class: "btn btn-lg btn-primary btn-block" %>
	  </p>
	<% end %>
	<%= link_to "Back", requisitions_path, class: "btn btn-default" %>
	</div> <!-- /container -->

<br>

