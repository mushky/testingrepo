<div class="container">
	<%= form_for :shipitem, html: {class: "form-horizontal"}, url: shipitems_path do |f| %>
		<% if @shipitem.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(@shipitem.errors.count, "error") %> Prohibited this post from being saved:</h2>
					<ul>
					<% @shipitem.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
					</ul>
				</div>
			<% end %>  	
		<p>
	    <%= f.label :part %><br>
	    <%= f.text_field :part, class: "form-control  input-medium" %>
	  </p>
	 
	  <p>
	    <%= f.label :serial %><br>
	    <%= f.text_field :serial, class: "form-control" %>
	  </p>

	  <p>
	    <%= f.label :date %><br>
	    <%= f.date_field :date, class: "form-control" %>
	  </p>

	  <p>
	    <%= f.label :description %><br>
	    <%= f.text_area :description, class: "form-control" %>
	  </p>

	  <p>
	    <%= f.label :quantity %><br>
	    <%= f.text_field :quantity, class: "form-control" %>
	  </p>

	  <p>
	  	<%= f.label :shipping_number, "Shipping Number (N/A if Shipping Number does not exist)" %><br>
	  	<%= f.text_field :shipping_number, class: "form-control" %>
	  </p>

	  <h3>Checklist</h3>

		<div class="checkbox">
		  <label>
		    <input type="checkbox" value="">
		    Receive authorized request for shipping
		  </label>
		</div>
		<div class="checkbox">
		  <label>
		    <input type="checkbox" value="">
		    For international shipments, verify that all items may be exported; obtain authorized license number and export category codes.
		  </label>
		</div>


		<h3>Select items to be shipped; record information.</h3>
		
		<div class="checkbox">
			<label>
			  <input type="checkbox" value="">
			  Interim (Overhead): Record in Overhead property list.
			</label>
		</div>

		<div class="checkbox">
		  <label>
			  <input type="checkbox" value="">
			  Interim (MCTF): Record in MCTF property list.
			</label>
		</div>

		<div class="checkbox">
			<label>
			  <input type="checkbox" value="">
			  Interim (UAEAF): Record in UAEAF Property Data, and update coding in UAE Receipts tracker.
			</label>
		</div>

		<div class="checkbox">
			<label>
			  <input type="checkbox" value="">
			  Planned: Record movement transaction in Inventory database.
			</label>
		</div>
		

		<div class="checkbox">
		  <label>
		    <input type="checkbox" value="">
		    Planned: Record movement transaction in Inventory database.
		  </label>
		</div>

		<div class="checkbox">
		  <label>
		    <input type="checkbox" value="">
		    Include shipping manifest with shipment.
		  </label>
		</div>

		<div class="checkbox">
		  <label>
		    <input type="checkbox" value="">
		    Arrange for package(s) to be picked up by shipper or forwarder.
		  </label>
		</div>

		<div class="checkbox">
		  <label>
		    <input type="checkbox" value="">
		    Obtain tracking number(s) and record per Step 3.
		  </label>
		</div>

		<div class="checkbox">
		  <label>
		    <input type="checkbox" value="">
		    Notify recipient of shipment data, manifest and tracking number(s).
		  </label>
		</div>

		<h3>Tracking during Shipping</h3>

		<div class="checkbox">
		  <label>
		    <input type="checkbox" value="">
		  	(For critical or high-value shipments) track shipment progress as requested by management.
		  </label>
		</div>

		<div class="checkbox">
		  <label>
		    <input type="checkbox" value="">
		  	Alert management of any problems or undue delays.
		  </label>
		</div>

		<h3>Update Inventory Records After Transfer is Complete</h3>

		<div class="checkbox">
		  <label>
		    <input type="checkbox" value="">
		  	Receive written notification of receipt of items.
		  </label>
		</div>

		<div class="checkbox">
		  <label>
		    <input type="checkbox" value="">
		  	Alert management and Procurement of any damage in shipment. 
		  </label>
		</div>

		<div class="checkbox">
		  <label>
		    <input type="checkbox" value="">
		  	Record receipt per Step 3.
		  </label>
		</div><br>

		<h4>
			<%= label_tag(:completed, "Shipping Checklist Complete?") %>		
			<%= check_box_tag(:completed) %>
		</h4>
		<form class="form-signin">
	  <p>
	    <%= f.submit "Submit", class: "btn btn-lg btn-primary btn-block" %>
	  </p>
	  <br>
	<% end %>
	<%= link_to "Back", shipitems_path, class: "btn btn-default" %>

</div> <!-- /container -->
